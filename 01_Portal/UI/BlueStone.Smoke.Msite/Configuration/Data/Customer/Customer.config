    <!-- 加载SysMenu信息 -->
    <SQL SQLKey="LoadCustomerByCellPhone" ConnectionKey="SMOKERead">
      <Text>
        <![CDATA[
                SELECT 
                *
                FROM smoke.Customer
                WHERE CellPhone = @CellPhone;
        ]]>
      </Text>
      </SQL>
    
    
    
    <!-- 创建SysMenu信息 -->
    <SQL SQLKey="InsertCustomer" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
                INSERT INTO smoke.Customer
                (
                `CellPhone`,
                `Email`,
                `IsEmailVerify`,
                `DisplayName`,
                `Gender`,
                `Birthday`,
                `Password`,
                `PasswordSalt`,
                `AreaSysNo`,
                `Address`,
                `HeadImage`,
                `CommonStatus`,
                `LastLoginDate`,
                `LastLoginIP`,
                `LastLoginClientSource`,
                `RegClientSource`,
                `RegisterDate`
                ) 
                VALUES 
                (
                @CellPhone,
                @Email,
                @IsEmailVerify,
                @DisplayName,
                @Gender,
                @Birthday,
                @Password,
                @PasswordSalt,
                @AreaSysNo,
                @Address,
                @HeadImage,
                @CommonStatus,
                @LastLoginDate,
                @LastLoginIP,
                @LastLoginClientSource,
                @RegClientSource,
                Now()
                );
                SELECT LAST_INSERT_ID() AS  SysNo;
          ]]>
      </Text>
    </SQL>

