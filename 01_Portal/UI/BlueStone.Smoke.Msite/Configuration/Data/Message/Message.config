<?xml version="1.0" encoding="utf-8"?>
<SQLConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <SQLList>
    <!-- 创建Message信息 -->
    <SQL SQLKey="InsertMessage" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
                INSERT INTO smoke.Message
                (
                `CompanySysNo`,
                `MsgType`,
                ActionCode,
                `MsgReceiver`,
                `MsgContent`,
                `Priority`,
                `RetryCount`,
                `Status`,
                `HandleTime`,
                `InDate`,
                `ExternalTemplateID`,
                `Parmaters`,
                ClientIP,
                MasterName,
                MasterID,
                LimitCount,
                SendCount,
                SendFrequency,
                LastSendTime,
                Url
                ) 
                VALUES 
                (
                @CompanySysNo,
                @MsgType,
                @ActionCode,
                @MsgReceiver,
                @MsgContent,
                @Priority,
                @RetryCount,
                @Status,
                @HandleTime,
                NOW(),
                @ExternalTemplateID,
                @Parmaters,
                @ClientIP,
                @MasterName,
                @MasterID,
                @LimitCount,
                @SendCount,
                @SendFrequency,
                @LastSendTime,
                @Url
                );
                SELECT LAST_INSERT_ID() AS  SysNo;
          ]]>
      </Text>
    </SQL>

    <SQL SQLKey="CheckSendSMSTimespan" ConnectionKey="SMOKERead">
      <Text>
        <![CDATA[
          SELECT
	          EXISTS (
		          SELECT
			          1
		          FROM
			          smoke.message
		          WHERE
			          MsgType = 1
		          AND MsgReceiver = @CellPhoneNumber
		          AND DATE_SUB(
			          NOW(),
			          INTERVAL @TimeSpanSecond SECOND
		          ) <= HandleTime
	          )     
        ]]>
      </Text>
    </SQL>


    <SQL SQLKey="SelectSMSNotHandledDuringOneHour" ConnectionKey="SMOKERead">
      <Text>
        <![CDATA[
          SELECT
	          `SysNo`,
            `CompanySysNo`,
            `MsgType`,
            `MsgReceiver`,
            `MsgContent`,
            `Priority`,
            `RetryCount`,
            `Status`,
            `HandleTime`,
            `InDate`,
            `ExternalTemplateID`,
            `Parmaters`
          FROM
	          smoke.message
          WHERE
	          STATUS = 0
          AND InDate >= DATE_SUB(NOW(), INTERVAL 1 HOUR)
          AND RetryCount < 5 #MoreCondition#
          ORDER BY
	          Priority ASC,
	          SysNo ASC
          LIMIT @MaxSmsCount;
        ]]>
      </Text>
    </SQL>

    <SQL SQLKey="UpdateSMSToSuccess" ConnectionKey="SMOKERead">
      <Text>
        <![CDATA[
          UPDATE smoke.message
          SET STATUS = 1,
           HandleTime = NOW()
          WHERE
	          SysNo =@SysNo;
        ]]>
      </Text>
    </SQL>

    <SQL SQLKey="UpdateSMSToFail" ConnectionKey="SMOKERead">
      <Text>
        <![CDATA[
          UPDATE smoke.message
          SET STATUS = 0,
           RetryCount = RetryCount + 1
          WHERE
	          SysNo =@SysNo;
        ]]>
      </Text>
    </SQL>
    
    <SQL SQLKey="UpdateSMSToReject" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
          UPDATE smoke.message
          SET STATUS = 2
          WHERE
	          SysNo =@SysNo;
        ]]>
      </Text>
    </SQL>
    <SQL SQLKey="LoadMessageReSendCount" ConnectionKey="SMOKERead">
      <Text>
        <![CDATA[
          select SysNo,ClientIP,Status,InDate from smoke.message
          where CompanySysNo=@CompanySysNo
          and MsgType=@MsgType
          and MsgReceiver=@MsgReceiver
          and InDate>=(select DATE_SUB(now(),INTERVAL 1 DAY))
          order by sysno desc;
        ]]>
      </Text>
    </SQL>
     <SQL SQLKey="LoadMessageByMasterIDAndMasterName" ConnectionKey="SMOKERead">
      <Text>
        <![CDATA[

          SELECT
	          m.`SysNo`,
            m.`CompanySysNo`,
            m.`MsgType`,
            m.`MsgReceiver`,
            m.`MsgContent`,
            m.`Priority`,
            m.`RetryCount`,
            m.`Status`,
            m.`HandleTime`,
            m.`InDate`,
            m.`ExternalTemplateID`,
            m.`Parmaters`,
            m.`ActionCode`,
            sd.`Code`,
            sd.`AddressCode`,
            sd.`AddressName`,
            sd.`Position`,
            sd.`Status` as SmokeDetectorStatus,
            sd.`Memo`
          FROM
	          smoke.message m
INNER JOIN smoke.smokedetector sd
ON m.MasterID = sd.`Code`
 #STRWHERE#
 ORDER BY m.InDate DESC
        ]]>
      </Text>
    </SQL>
    <SQL SQLKey="LoadLastMessageByMsgReceiver" ConnectionKey="SMOKERead">
      <Text>
        <![CDATA[
        select * from smoke.message where MsgReceiver=@MsgReceiver and ActionCode='DevicesWarning' AND msgtype=2 and status <> 2 order by indate desc  limit 1;
        ]]>
      </Text>
    </SQL>

  </SQLList>
</SQLConfig>