<?xml version="1.0" encoding="utf-8"?>
<SQLConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <SQLList>

    <!-- 创建SysMenu信息 -->
    <SQL SQLKey="InsertClient" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
                INSERT INTO smoke.Client
                (
                `Name`,
                `HeaderImage`,
                `CellPhone`,
                `CellPhone2`,
                `CellPhone3`,
                `AppCustomerID`,
                `RegisterTime`,
                `ManagerSysNo`
                ) 
                VALUES 
                (
                @Name,
                @HeaderImage,
                @CellPhone,
                @CellPhone2,
                @CellPhone3,
                @AppCustomerID,
                @RegisterTime,
                @ManagerSysNo
                );
                SELECT LAST_INSERT_ID() AS  SysNo;
          ]]>
      </Text>
    </SQL>

    <!-- 删除SysMenu信息:更改为删除状态-999 -->
    <SQL SQLKey="DeleteClient" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
                 UPDATE smoke.Client SET CommonStatus=-1 WHERE SysNo = @SysNo
        ]]>
      </Text>
    </SQL>

    <!-- 加载SysMenu信息 -->
    <SQL SQLKey="LoadClient" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
                SELECT 
                `SysNo`,
                `Name`,
                `HeaderImage`,
                `CellPhone`,
                `CellPhone2`,
                `CellPhone3`,
                `AppCustomerID`,
                `RegisterTime`,
                `ManagerSysNo`,
                `EditTime`
                FROM smoke.Client
                WHERE SysNo = @SysNo
        ]]>
      </Text>
    </SQL>
    <!-- 获取Client信息By  -->
    <SQL SQLKey="LoadClientByAppCustomerID" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
                SELECT 
                client.`SysNo`,
                client.`Name`,
                client.`HeaderImage`,
                client.`CellPhone`,
                client.`CellPhone2`,
                client.`CellPhone3`,
                client.`AppCustomerID`,
                client.`RegisterTime`,
                client.`ManagerSysNo`,
                user.MasterSysNo AS CompanySysNo,
                client.`EditTime`
                FROM smoke.Client AS client
                LEFT JOIN smoke.systemuser AS user
                ON client.ManagerSysNo=user.SysNo AND user.CommonStatus=1
                WHERE AppCustomerID = @AppCustomerID
        ]]>
      </Text>
    </SQL>
    <!-- 分页查询SysMenu信息 -->
    <SQL SQLKey="QueryClientList" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[

SELECT SQL_CALC_FOUND_ROWS 
    c.SysNo,
    c.Name,
    c.HeaderImage,
    c.CellPhone,
    c.CellPhone2,
    c.CellPhone3,
    c.AppCustomerID,
    c.RegisterTime,
    c.ManagerSysNo,
    c.EditTime FROM
(
SELECT c.SysNo,
    c.Name,
    c.HeaderImage,
    c.CellPhone,
    c.CellPhone2,
    c.CellPhone3,
    c.AppCustomerID,
    c.RegisterTime,
    c.ManagerSysNo,
    c.EditTime
FROM smoke.client as c where @Cellphone is not null and @Cellphone <>'' 
and (CellPhone=@Cellphone OR CellPhone2=@Cellphone OR CellPhone3=@Cellphone)
union
SELECT c.SysNo,
    c.Name,
    c.HeaderImage,
    c.CellPhone,
    c.CellPhone2,
    c.CellPhone3,
    c.AppCustomerID,
    c.RegisterTime,
    c.ManagerSysNo,
    c.EditTime
FROM smoke.client as c
inner join smoke.clientsmokedetector cd on cd.ClientSysNo =  c.SysNo
inner join smoke.smokedetector d on d.Code =  cd.SmokeDetectorCode
#STRWHERE# 
) as c
ORDER BY @SortFields
LIMIT @StartNumber, @PageSize;

SELECT FOUND_ROWS() AS TotalCount ;

        ]]>
      </Text>
    </SQL>


    <SQL SQLKey="QueryAllClientList" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[

SELECT SQL_CALC_FOUND_ROWS 
    c.SysNo,
    c.Name,
    c.HeaderImage,
    c.CellPhone,
    c.CellPhone2,
    c.CellPhone3,
    c.AppCustomerID,
    c.RegisterTime,
    c.ManagerSysNo,
    c.EditTime
FROM smoke.client as c
#JOINSQL#
#STRWHERE#  
ORDER BY @SortFields
LIMIT @StartNumber, @PageSize;
SELECT FOUND_ROWS() AS TotalCount ;

        ]]>
      </Text>
    </SQL>


    <!-- 更新SysMenu信息 -->
    <SQL SQLKey="UpdateClient" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
            UPDATE smoke.Client SET 
                `Name` = @Name,
                `HeaderImage` = @HeaderImage,
                `CellPhone` = @CellPhone,
                `CellPhone2` = @CellPhone2,
                `CellPhone3` = @CellPhone3,
                `AppCustomerID` = @AppCustomerID,
                `RegisterTime` = @RegisterTime,
                `ManagerSysNo` = @ManagerSysNo,
                `EditTime` = @EditTime
            WHERE SysNo = @SysNo
          ]]>
      </Text>
    </SQL>

    <!-- 批量修改状态 -->
    <SQL SQLKey="UpdateClientStatusBatch" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
                UPDATE smoke.Client
                SET `CommonStatus` = @Status 
                WHERE SysNo in ( #BatchSysNo# );
        ]]>
      </Text>
    </SQL>

    <!-- 批量删除 -->
    <SQL SQLKey="DeleteClientBatch" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
                 UPDATE smoke.Client
                 SET `CommonStatus` = -1 
                 WHERE SysNo in ( #BatchSysNo# );
        ]]>
      </Text>
    </SQL>
   
  </SQLList>
</SQLConfig>