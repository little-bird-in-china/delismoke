    <!-- 创建SysMenu信息 -->
    <SQL SQLKey="InsertAddress" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
                INSERT INTO smoke.Address
                (
                `CompanySysNo`,
                `Code`,
                `ParentSysNo`,
                `Name`,
                `PathName`,
                AreaSysNo,
                AreaAddress,
                `Grade`,
                `Number`,
                EditUserSysNo,
                EditUserName,
                EditDate
                ) 
                VALUES 
                (
                @CompanySysNo,
                @Code,
                @ParentSysNo,
                @Name,
                @PathName,
                @AreaSysNo,
                @AreaAddress,
                @Grade,
                @Number,
                @EditUserSysNo,
                @EditUserName,
                NOW(3)
                );
                SELECT LAST_INSERT_ID() AS  SysNo;
          ]]>
      </Text>
    </SQL>
    
    <!-- 加载SysMenu信息 -->
    <SQL SQLKey="CreateRootAddress" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
set @RootCode='10'; 

INSERT INTO smoke.Address
(
`CompanySysNo`,
`Code`,
`ParentSysNo`,
`Name`,
`PathName`,
AreaSysNo,
AreaAddress,
`Grade`,
`Number`,
EditUserSysNo,
EditUserName,
EditDate
) 
SELECT 
c.`SysNo`,
@RootCode,
0,
c.`Name`,
c.Name,
c.AreaSysNo,
c.address,
0,
'0',
c.InUserSysNo,
c.InUserName,
c.InDate from smoke.company c
WHERE c.SysNo=@CompanySysNo AND NOT EXISTS (select SysNo from smoke.Address where CompanySysNo=@CompanySysNo) ; 
        ]]>
      </Text>
    </SQL>
    

