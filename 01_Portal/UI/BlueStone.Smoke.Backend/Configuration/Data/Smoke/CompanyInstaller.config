    <SQL SQLKey="UpdateCompanyInstallerBatch" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
             
        ]]>
      </Text>
    </SQL>
    
    
  </SQLList>
</SQLConfig>