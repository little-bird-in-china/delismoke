    <SQL SQLKey="QuerySmokeDetectorMessage" ConnectionKey="SMOKERead">
      <Text>
        <![CDATA[
SELECT SQL_CALC_FOUND_ROWS
m.SysNo,
m.MasterID,
m.ActionCode,
m.MsgType,
m.MsgContent,
m.MsgReceiver,
