    <!-- 创建SysMenu信息 -->
    <SQL SQLKey="InsertSmokeDetector" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
                INSERT INTO smoke.SmokeDetector
                (
                `CompanySysNo`,
                `Code`,
                `AddressCode`,
                `AddressName`,
                `Position`,
                `Status`,
                `Memo`,
                `InstalledImg`,
                `InstallerSysNo`,
                `InstallerName`,
                `InstalledTime`,
                `InUserSysNo`,
                `InUserName`,
                `InDate`
                ) 
                VALUES 
                (
                @CompanySysNo,
                @Code,
                @AddressCode,
                @AddressName,
                @Position,
                @Status,
                @Memo,
                @InstalledImg,
                @InstallerSysNo,
                @InstallerName,
                @InstalledTime,
                @InUserSysNo,
                @InUserName,
                now(3)
                );
                SELECT LAST_INSERT_ID() AS  SysNo;
          ]]>
      </Text>
    </SQL>

