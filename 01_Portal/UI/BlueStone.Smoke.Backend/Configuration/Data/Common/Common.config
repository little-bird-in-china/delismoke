    <!-- 获取单个Area -->
    <SQL SQLKey="LoadArea" ConnectionKey="SMOKEWrite">
      <Text>
        <![CDATA[
        
  SELECT SysNo
      ,ProvinceSysNo
      ,CitySysNo
      ,ProvinceName
      ,CityName
      ,DistrictName
      ,OrderNumber
      ,Status
      ,GBCode
      ,InUserSysNo
      ,InUserName
      ,InDate
  FROM smoke.Area
  WHERE SysNo=@SysNo
